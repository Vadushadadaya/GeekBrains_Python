a = ['инженер-конструктор Игорь', 'главный бухгалтер МАРИНА', 'токарь высшего разряда нИКОЛАй', 'директор аэлита']
b = ''
for i in a:
    for j in i[::-1]:
        if j == ' ':
            break
        b += j
    
    b = b[::-1]
    b = b.capitalize()
    print("Привет, " + b + '!')
    b =''     